						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"nome\": \"João Silva Santos\",\n  \"dt_nascimento\": \"1990-01-15\",\n  \"email\": \"joao.santos@example.com\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/recursos-humanos/pessoa/:id",
							"host": ["{{base_url}}"],
							"path": ["recursos-humanos", "pessoa", ":id"],
							"variable": [
								{
									"key": "id",
									"value": "1"
								}
