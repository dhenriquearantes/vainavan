				{
					"name": "Criar Pessoa",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"nome\": \"João Silva\",\n  \"dt_nascimento\": \"1990-01-15\",\n  \"email\": \"joao.silva@example.com\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/recursos-humanos/pessoa",
							"host": ["{{base_url}}"],
							"path": ["recursos-humanos", "pessoa"]
						}
					}
				},
				{
					"name": "Listar Pessoas",
					"request": {
						"method": "GET",
